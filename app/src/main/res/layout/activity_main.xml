<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcl.demo.ui.MainActivity">


    <RadioGroup
        android:id="@+id/rg_bottom_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbtn_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/btn_radio_selector"
            android:text="@string/fragment_label_left"
            android:textColor="@color/my_white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtn_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/btn_radio_selector"
            android:text="@string/fragment_label_middle"
            android:textColor="@color/my_white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtn_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/btn_radio_selector"
            android:text="@string/fragment_label_right"
            android:textColor="@color/my_white"
            android:textSize="16sp" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/rg_bottom_btns" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>
